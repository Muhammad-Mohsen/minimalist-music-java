<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@color/colorPrimaryDark"
	>

	<!--setting the stateListAnimator to null removes the shadow-->
	<Button
		android:id="@+id/buttonCrumb"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minWidth="10dp"
		android:padding="@dimen/buttonPaddingLarge"
		android:background="@drawable/style_button_alpha"
		android:stateListAnimator="@null"
		android:textSize="@dimen/textLarge"
		android:textColor="@color/colorTextPrimary"
		tools:text="Directory"
		/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/breadcrumbSeparator"
		android:padding="@dimen/buttonPaddingSmall"
		android:textColor="@color/colorTextPrimaryDark"
		android:textSize="@dimen/textLarge"
		/>

</LinearLayout>
